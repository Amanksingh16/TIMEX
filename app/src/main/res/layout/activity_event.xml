<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/img6"
    tools:context="com.example.amansingh.timex.Event">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Event Participants menu"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/event_name2"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="42dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        android:background="@drawable/button"
        android:ems="10"
        android:hint="Add Participant Name"
        android:inputType="textPersonName"
        android:padding="15dp" />

    <LinearLayout
        android:id="@+id/event_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/save_later"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="Event Name - "
            android:textColor="@android:color/holo_red_light"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participant_name"
        android:padding="12dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/stopwatch_event"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:padding="10dp"
            android:text="Stopwatch"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/slider_event"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:padding="10dp"
            android:text="Slidertime"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/save_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eventdetails"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button3"
        android:padding="15dp"
        android:text="SAVE FOR LATER"
        android:textStyle="italic" />

    <Button
        android:id="@+id/eventdetails"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/button4"
        android:padding="20dp"
        android:text="Event Details"
        android:textSize="18sp"
        android:textStyle="bold|italic" />
</RelativeLayout>
