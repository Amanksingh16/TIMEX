<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img5"
    android:paddingTop="75dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/slidertimermenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SLIDER TIMER MENU"
        android:textColor="@android:color/background_light"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/usesslider"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/button3"
        android:padding="15dp"
        android:text="USE SLIDER TIMER"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/listslider"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button3"
        android:padding="15dp"
        android:text="PREVIOUS SLIDER TIMERS"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="italic" />
</LinearLayout>