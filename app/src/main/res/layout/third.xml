<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img5"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="EVENTS  MENU"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/eventname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        android:background="@drawable/button2"
        android:ems="10"
        android:hint="Event Name"
        android:inputType="textPersonName"
        android:padding="12dp" />

    <EditText
        android:id="@+id/participants"
        android:layout_width="280dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eventname"
        android:layout_below="@+id/eventname"
        android:layout_marginTop="35dp"
        android:background="@drawable/button2"
        android:ems="10"
        android:hint="Number Of Participants"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/eventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participants"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button2"
        android:orientation="horizontal"
        android:padding="8dp">

        <Spinner
            android:id="@+id/eventday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"></Spinner>

        <Spinner
            android:id="@+id/eventmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"></Spinner>

        <Spinner
            android:id="@+id/eventyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventdate"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/previous_events"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="12dp"
            android:text="Previous Events"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/eventstart"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="12dp"
            android:text="START EVENT"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>