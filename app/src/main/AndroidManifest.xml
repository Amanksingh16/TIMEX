<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amansingh.timex">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".Register"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".Stopwatch"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".Slidertimer" />
        <activity
            android:name=".listslidertimer"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".view_slidertimer"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".Liststopwatch"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".viewstopwatch"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".Event"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".Eventslist" />
        <activity android:name=".EventDetails" />
        <activity android:name=".Participants" />
        <activity android:name=".Participantsdetails"></activity>
    </application>

</manifest>